<h2><%= @course.name %></h2>
<p>
	Language_Id: <%= @course.language_id %>
</p>
<p>
	Id: <%= @course.id %>
</p>
<p>
	<%= link_to new_course_story_path(@course), :class => 'btn btn-success' do %>
		<i class="icon-plus icon-white"></i> New Story
	<% end %>
</p>
<ol>
<% @stories.each do |f| %>
	<li><%= link_to f.name, course_story_path(f) %>
	<%= link_to course_story_path(f), :method => :delete, :class => 'btn btn-danger' do %>
		<i class="icon-trash icon-white"></i> Destroy
	<% end %></li><br/>
<% end %>
</ol>