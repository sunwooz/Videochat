<% @posts.each do |post| %>
    <h1><%= link_to post.title, post_path(post) %></h1>
	<p><%=l post.created_at %></p>
    <p>
		<%= post.body %>
	</p>
	<%= link_to "Edit", edit_post_path(post) %>
	<%= link_to "Destroy", post_path(post), :method => :delete, :class => :destroy %>
<% end %>

<%= link_to 'New', new_post_path %>

