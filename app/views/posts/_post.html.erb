<% @posts.each do |post| %>
<div id="thispost">
    <h1 id="postTitle"><%= link_to post.title, post_path(post) %></h1>
	<p>Posted On: <%= post.created_at %></p>
    <p id="postBody">
		<%= markdown(post.body) %>
	</p>
	<% if admin? %>
		<%= link_to "Edit", edit_post_path(post), :class => "btn" %>
		<%= link_to "Destroy", post_path(post), :method => :delete, :class => :delete_post %>
	<% end %>
	<hr/>
</div>
<% end %>